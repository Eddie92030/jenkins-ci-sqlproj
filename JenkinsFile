pipeline {
  agent {
     node { 
        label 'windows'
        } 
  }
  stages {
    stage('Checkout Scm') {
      steps {
        git 'https://github.com/Eddie92030/jenkins-ci-sqlproj'
      }
    }

    stage('Build Dacpac') {
      steps {
        bat "\"${tool name: 'MSBuild', type: 'msbuild'}\\MSBuild.exe\" /p:Configuration=Release"
        gci $ENV:WORKSPACE -rec
      }
    }

    stage('Publish to Nuget') {
      steps {
        echo 'Todo: publish to nuget'
      }
    }

  }
}
